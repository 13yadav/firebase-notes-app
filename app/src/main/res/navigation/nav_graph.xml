<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesListFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.strangecoder.notesapp.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_notesListFragment"
            app:destination="@id/notesListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.strangecoder.notesapp.fragments.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_notesListFragment"
            app:destination="@id/notesListFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.strangecoder.notesapp.fragments.NotesListFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes_list">
        <action
            android:id="@+id/action_notesListFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/notesListFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_notesListFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment" />
        <action
            android:id="@+id/action_notesListFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.strangecoder.notesapp.fragments.NoteDetailFragment"
        android:label="Note Detail"
        tools:layout="@layout/fragment_note_detail" >
        <action
            android:id="@+id/action_noteDetailFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <argument
            android:name="noteItem"
            app:argType="com.strangecoder.notesapp.model.Note" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.strangecoder.notesapp.fragments.AddNoteFragment"
        android:label="Add New Note"
        tools:layout="@layout/fragment_add_note" >
        <action
            android:id="@+id/action_addNoteFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
    </fragment>
</navigation>